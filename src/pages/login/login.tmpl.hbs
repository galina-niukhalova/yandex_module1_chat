<form id="login" class="login-form">
  <div class="login-form_container">
    <h3 class="login-form_title">Вход</h3>
    {{ input 
      type="text" 
      name="login" 
      className="login-form_input login-form_login-input" 
      label="Логин"
    }}
    {{ input 
      type="password" 
      name="password" 
      className="login-form_input login-form_password-input" 
      label="Пароль"
    }}
  </div>
  <div class="login-form_container">
    {{ button title="Авторизоваться" className="login-form_submit-button" type="submit" }}
    {{ link url="/signup" title="Нет аккаунта?" }}
  </div>
</form>